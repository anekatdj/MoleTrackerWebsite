@page "/login"

@layout EmptyLayout

@inject NavigationManager NavManager

<link href="css/CSSStyles.css" rel="stylesheet" />
<link href="css/BackgroundColor.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


<div class="page-background-class">
    <div class="wrapper fadeInDown" style="margin-top: 10%">
        <div id="formContent">
            <h1>Vælg login</h1>
            <div>
                <button id="PatLogInButton" @onclick="NavigateToPatientLogInPage" style="        background-color: cornflowerblue;
        color: white;
        border-radius: 8px;
        font-size: 20px;
        margin-bottom: 1%;
        margin-top: 5%;
        padding: 3px 50px;
        border-style: none;
"
                        type="submit">
                    <i class="fa fa-user"></i>
                    Patient Login
                </button>
            </div>

            <div>
                <button id="MedLogInButton" @onclick="NavigateToMedLogInPage" style="        background-color: firebrick;
        color: white;
        border-radius: 8px;
        font-size: 20px;
        margin-bottom: 5%;
        margin-top: 5%;
        padding: 3px 50px;
        border-style: none;
"
                        type="submit">
                    <i class="fa fa-user-plus"></i>
                    Medical Login
                </button>
            </div>

        </div>

    </div>
</div>

@code {

    public void NavigateToPatientLogInPage()
    {
        NavManager.NavigateTo("/patientLogin");
    }

    private void NavigateToMedLogInPage()
    {
        NavManager.NavigateTo("/medicalLogin");
    }
}