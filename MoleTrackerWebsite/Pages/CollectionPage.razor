                            <td @onclick="@((e) => ShowSpecificPicture(e, item.Item1.PictureID))">
                                @item.Item1.DateOfUpload.ToLocalTime().ToString("dd MMM yyyy HH:mm",
                                    CultureInfo.CreateSpecificCulture("da-DA"))
                                <img src="data:image;base64,@System.Convert.ToBase64String(@item.Item2.PicData)" width="100" height="100" />
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>
</div>



