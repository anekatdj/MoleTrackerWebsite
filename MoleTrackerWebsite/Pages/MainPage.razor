            <button style="float:right" class="@Arrow" @onclick="TurnAroundModel"></button>

        </div>
    </div>

    @*636*1431 billedstørrelse*@
    
    <div>
        <button style="float: bottom; border-radius: 28px; margin-bottom: 10px" class="@AddCollectionButton"></button>
